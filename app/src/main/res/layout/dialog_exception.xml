<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ExceptionAccent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp">


        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="28dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="48dp"
            android:background="#fff"
            android:elevation="4dp"
            android:orientation="vertical"
            android:padding="20dp">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="10dp">

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_above="@+id/Okbtn_dialog"
                        android:layout_centerHorizontal="true">

                        <LinearLayout
                            android:id="@+id/lllll"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/text_error"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:textAlignment="center"
                                android:textColor="@color/red"
                                android:textSize="15dp"
                                android:textStyle="bold"
                                android:visibility="gone" />

                            <TextView
                                android:id="@+id/text_dialog"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:textColor="@color/black"
                                android:textSize="15dp"
                                android:textAlignment="center"
                                android:textStyle="bold"/>

                            <TextView
                                android:id="@+id/text_dialog2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="15dp"
                                android:textSize="15dp"
                                android:textColor="@color/black"
                                android:textStyle="italic" />
                        </LinearLayout>
                    </ScrollView>

                    <Button
                        android:id="@+id/Okbtn_dialog"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="20dp"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="OK"
                        android:textAllCaps="true"
                        android:background="@drawable/button_bg_exception"
                        android:textColor="@color/White"
                        android:textSize="@dimen/Button_txt_size" />

                    <Button
                        android:id="@+id/Canclebtn_dialog"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/Okbtn_dialog"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="20dp"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="Cancel"
                        android:textAllCaps="true"
                        android:background="@drawable/button_bg_exception"
                        android:textColor="@color/White"
                        android:textSize="@dimen/Button_txt_size" />

                </LinearLayout>
            </ScrollView>
        </RelativeLayout>

        <ImageButton
            android:id="@+id/user_profile_photo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:background="@mipmap/ic_launcher_logo_c"
            android:elevation="9dp"
            android:scaleType="centerCrop" />
    </RelativeLayout>
</RelativeLayout>
