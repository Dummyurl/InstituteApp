<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="5dp">


    <android.support.v7.widget.CardView

        android:id="@+id/profileCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="2dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/chkactiveuserCheck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:padding="5dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:orientation="vertical"
                android:padding="2dp">

                <com.mksmcqapplicationtest.View.CustomTextView
                    android:id="@+id/txtExamTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="@string/Cardview_row_Exam_Title_hint"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:visibility="gone" />


                <com.mksmcqapplicationtest.View.CustomTextView
                    android:id="@+id/txtDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="@string/Cardview_row_Date_hint"
                    android:textSize="12sp"
                    android:visibility="gone" />

                <com.mksmcqapplicationtest.View.CustomTextView
                    android:id="@+id/txtTestTotalMarks"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Cardview_row_Test_Total_Marks_hint"
                    android:textSize="12sp"
                    android:visibility="gone" />

                <com.mksmcqapplicationtest.View.CustomTextView
                    android:id="@+id/txtEmailAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/EmailAddress_hint"
                    android:textSize="12sp"
                    android:visibility="gone" />

                <com.mksmcqapplicationtest.View.CustomTextView
                    android:id="@+id/txtUniversityName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Cardview_row_university_name_hint"
                    android:textSize="12sp"
                    android:visibility="gone" />


            </LinearLayout>


            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical">

                <com.mksmcqapplicationtest.View.CustomTextView
                    android:id="@+id/txtTextData"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:text="@string/fa_text"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_size_25"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <com.mksmcqapplicationtest.View.CustomTextView
                    android:id="@+id/txtImageData"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:text="@string/fa_image"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_size_25"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <com.mksmcqapplicationtest.View.CustomTextView
                    android:id="@+id/txtVideoData"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:text="@string/fa_video"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_size_25"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <com.mksmcqapplicationtest.View.CustomTextView
                    android:id="@+id/txtPDFData"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:text="@string/fa_pdf"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_size_25"
                    android:textStyle="bold"
                    android:visibility="gone" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.mksmcqapplicationtest.View.CustomTextView
                    android:id="@+id/txtAcDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text="@string/Cardview_row_Date_hint"
                    android:textSize="@dimen/text_size_10"
                    android:visibility="gone" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/userImageProfile"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"

                    android:src="@drawable/ic_launcher_logo_c"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>