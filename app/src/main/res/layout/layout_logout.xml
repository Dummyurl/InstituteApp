<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/margin6">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        android:id="@+id/linearUserManual">

        <com.mksmcqapplicationtest.View.SquareImageView
            android:layout_width="wrap_content"
            android:layout_weight="0.1"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_menu_camera" />

        <com.mksmcqapplicationtest.View.CustomTextView
            android:id="@+id/txtLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/margin10"
            android:singleLine="true"
            android:layout_gravity="center"
            android:layout_weight="0.8"
            android:textColor="@color/black"
            android:text="@string/Logout_hint"
            android:textSize="@dimen/text_size_16" />
        <include
            layout="@layout/layout_right_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>



</LinearLayout>