<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <include
        android:id="@+id/appBar"
        layout="@layout/action_bar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:visibility="gone"
        android:contentDescription="@string/logo_image_desc"
        android:src="@mipmap/ic_launcher_logo_c" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:id="@+id/txtDevelopeBy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingLeft="@dimen/margin10"
                    android:text="@string/About_MKS"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_16" />

                <View
                    android:id="@+id/viewSeparator1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/margin6"
                    android:layout_marginRight="@dimen/margin6"
                    android:background="@color/gray" />

                <LinearLayout
                    android:id="@+id/linearContact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <com.mksmcqapplicationtest.View.SquareImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.1"
                        android:src="@drawable/contact_us" />

                    <TextView
                        android:id="@+id/txtContact"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.8"
                        android:paddingLeft="@dimen/margin10"
                        android:singleLine="true"
                        android:text="@string/Contact"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_16" />

                    <include
                        layout="@layout/layout_right_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <View
                    android:id="@+id/viewSeparator2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/margin6"
                    android:layout_marginRight="@dimen/margin6"
                    android:background="@color/gray" />

                <LinearLayout
                    android:id="@+id/linearContactUs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp">


                    <com.mksmcqapplicationtest.View.SquareImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.1"
                        android:src="@drawable/mail" />

                    <TextView
                        android:id="@+id/txtContactUs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.8"
                        android:paddingLeft="@dimen/margin10"
                        android:singleLine="true"
                        android:text="@string/Contact_Us"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_16" />

                    <include
                        layout="@layout/layout_right_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <View
                    android:id="@+id/viewSeparator3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"

                    android:layout_marginLeft="@dimen/margin6"
                    android:layout_marginRight="@dimen/margin6"
                    android:background="@color/gray" />

                <LinearLayout
                    android:id="@+id/linearVisiteOurWebSite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp">


                    <com.mksmcqapplicationtest.View.SquareImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.1"
                        android:src="@drawable/web" />


                    <TextView
                        android:id="@+id/txtVisiteOurWebSite"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.8"
                        android:paddingLeft="@dimen/margin10"
                        android:singleLine="true"
                        android:text="@string/Visit_web_site"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_16" />

                    <include
                        layout="@layout/layout_right_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <View
                    android:id="@+id/viewSeparator4"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"

                    android:layout_marginLeft="@dimen/margin6"
                    android:layout_marginRight="@dimen/margin6"
                    android:background="@color/gray" />

                <LinearLayout
                    android:id="@+id/linearPrivacyPolicy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp">


                    <com.mksmcqapplicationtest.View.SquareImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.1"
                        android:src="@drawable/privacypolicy" />

                    <TextView
                        android:id="@+id/txtPrivacyPolicy"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.8"
                        android:paddingLeft="@dimen/margin10"
                        android:singleLine="true"
                        android:text="@string/Privacy_policy"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_16" />

                    <include
                        layout="@layout/layout_right_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>

        </android.support.v7.widget.CardView>


    </ScrollView>
</LinearLayout>