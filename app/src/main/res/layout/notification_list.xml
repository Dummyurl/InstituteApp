<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView

        android:id="@+id/profileCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="2dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/userImageProfile"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_launcher_logo_c" />


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:orientation="vertical"
                android:padding="2dp">

                <com.mksmcqapplicationtest.View.CustomTextView
                    android:id="@+id/NotificationTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="@string/Cardview_row_Exam_Title_hint"
                    android:textSize="16sp"
                    android:textStyle="bold" />


                <com.mksmcqapplicationtest.View.CustomTextView
                    android:id="@+id/NotificationText"
                    android:singleLine="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Cardview_row_Date_hint"
                    android:textSize="12sp" />

                <com.mksmcqapplicationtest.View.CustomTextView
                    android:id="@+id/Notificationdate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Cardview_row_Test_Total_Marks_hint"
                    android:textSize="12sp"
                     />

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>
