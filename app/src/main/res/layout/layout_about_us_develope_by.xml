<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/margin6">

    <LinearLayout
        android:id="@+id/linearAboutUs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <com.mksmcqapplicationtest.View.SquareImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.1"
            android:src="@drawable/ic_menu_camera" />

        <TextView
            android:id="@+id/txtAboutUs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.8"
            android:paddingLeft="@dimen/margin10"
            android:singleLine="true"
            android:text="@string/About_Us_hint"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_16" />

        <include
            layout="@layout/layout_right_arrow" />
    </LinearLayout>

    <View
        android:id="@+id/viewSeparator1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/margin6"
        android:layout_marginRight="@dimen/margin6"
        android:background="@color/gray" />

    <LinearLayout
        android:id="@+id/linearDevelopBy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <com.mksmcqapplicationtest.View.SquareImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.1"
            android:src="@drawable/ic_menu_camera" />

        <TextView
            android:id="@+id/txtDevelopeBy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.8"
            android:paddingLeft="@dimen/margin10"
            android:singleLine="true"
            android:text="@string/Develop_By_hint"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_16" />

        <include
            layout="@layout/layout_right_arrow"/>
    </LinearLayout>


</LinearLayout>