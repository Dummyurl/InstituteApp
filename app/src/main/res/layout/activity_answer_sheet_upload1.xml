<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


        <RelativeLayout
            android:layout_above="@+id/btnUploadAnswerSheet"
            android:layout_width="match_parent"
            android:layout_height="match_parent">



            <RelativeLayout
                android:padding="4dp"
                android:id="@+id/linear2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/spinnerForStudentName"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/textview_background_for_login"></Spinner>

                <LinearLayout
                    android:layout_alignParentRight="true"
                    android:gravity="end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorAccent">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_arrow_drop_down_white_24dp" />
                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/linear3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linear2"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/ScrollBar_padding_Bottom"
                android:paddingRight="@dimen/ScrollBar_padding_Right"
                android:paddingTop="@dimen/ScrollBar_padding_top">

                <TextView
                    android:id="@+id/txt3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingTop="20dp"
                    android:text="Select Data          "
                    android:textSize="12dp" />

                <Spinner
                    android:id="@+id/spinnerForData"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_toRightOf="@+id/txt3"
                    android:background="@drawable/btn_dropdown"></Spinner>

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:src="@drawable/drop" />

            </RelativeLayout>

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/linear3"
                android:background="@drawable/btn_dropdown">

                <Button
                    android:id="@+id/btnbrowseImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="browse" />

                <ImageView
                    android:id="@+id/dataimage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/btnbrowseImage"
                    android:layout_centerHorizontal="true"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true" />
            </RelativeLayout>
        </RelativeLayout>


    <Button
        android:id="@+id/btnUploadAnswerSheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_bg_rounded_corners"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:text="Upload"
        android:textColor="@color/btn_text_color"
        android:textSize="@dimen/Button_txt_size" />

</RelativeLayout>
